#!/bin/bash

# 1. Trouver le fichier utilisateurs.txt
fichier_utilisateurs=$(find . -type f -name "utilisateurs.txt" | head -n 1)

if [[ -z "$fichier_utilisateurs" ]]; then
  echo "âŒ Fichier 'utilisateurs.txt' introuvable."
  exit 1
fi

echo "âœ… Fichier utilisateurs trouvÃ© : $fichier_utilisateurs"

# 2. Trouver le fichier *.zip contenant "secret" dans le nom
fichier_zip=$(find . -type f -name "*secret*.zip" | head -n 1)

if [[ -z "$fichier_zip" ]]; then
  echo "âŒ Fichier ZIP secret introuvable."
  exit 1
fi

echo "âœ… Fichier ZIP trouvÃ© : $fichier_zip"

# 3. Boucle de test des mots de passe Ã  partir du fichier utilisateurs
cat "$fichier_utilisateurs" | while read nom _ date _; do
  echo "ğŸ” Test du mot de passe : $nom"
  
  # Tentative de dÃ©compression silencieuse avec le mot de passe
  unzip -P "$nom" -t "$fichier_zip" > /dev/null 2>&1
  
  if [[ $? -eq 0 ]]; then
    echo "âœ… Mot de passe trouvÃ© : $nom"
    echo "ğŸ“¦ Contenu du fichier ZIP :"
    unzip -P "$nom" "$fichier_zip"
    exit 0
  fi
done

echo "âŒ Aucun mot de passe correct trouvÃ©."
exit 1
